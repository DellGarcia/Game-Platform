    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF303A4F"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
       
        <Grid Height="100" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Margin="100,8" FontSize="22" TextAlignment="Center" Foreground="#FF188118">Acertos</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1" x:Name="txtAcertos" Foreground="GhostWhite" Margin="0" FontSize="20" TextAlignment="Center">0</TextBlock>

            <TextBlock Grid.Column="1" Grid.Row="0" Margin="100,8" FontSize="22" TextAlignment="Center" Foreground="#FF2660A4">Tentativas</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="1" x:Name="txtTentativas" Foreground="GhostWhite" Margin="0" FontSize="20" TextAlignment="Center">0</TextBlock>

            <TextBlock Grid.Column="2" Grid.Row="0" Margin="100,8" FontSize="22" TextAlignment="Center" Foreground="#FFA01818">Erros</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="1" x:Name="txtErros" Foreground="GhostWhite" Margin="0" FontSize="20" TextAlignment="Center">0</TextBlock>
        </Grid>

        <Grid MaxWidth="1080" VerticalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <materialDesign:Card Grid.Column="0" Grid.Row="0" UniformCornerRadius="5" Margin="20" Background="Black">
